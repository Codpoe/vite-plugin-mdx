{
  "name": "@brillout/vite-plugin-mdx",
  "version": "0.1.3",
  "scripts": {
    "// User Scripts": "",
    "dev": "npm run dev:prepare && npm run dev:start",
    "dev:prepare": "npm run clean:vite-plugin-mdx && npm run install:without-peer-dependencies",
    "dev:start": "npm run tsc:watch",
    "build": "npm run build:prepare && npm run build:start",
    "build:prepare": "npm run clean:vite-plugin-mdx && npm run install:without-peer-dependencies",
    "build:start": "npm run tsc:once",
    "// Install": "",
    "install:without-peer-dependencies": "npm install --legacy-peer-deps",
    "// TypeScript": "",
    "tsc:watch": "tsc --watch",
    "tsc:once": "tsc",
    "// Clean": "",
    "clean": "npm run clean:all",
    "clean:vite-plugin-mdx": "npm run clean:install && npm run clean:build",
    "clean:install": "rm -rf ./node_modules/",
    "clean:build": "rm -rf ./dist/",
    "clean:all": "git clean -Xdf"
  },
  "main": "dist/index.js",
  "files": [
    "dist"
  ],
  "peerDependencies": {
    "react": "*",
    "vite": "*"
  },
  "dependencies": {
    "@mdx-js/mdx": "^2.0.0-next.8",
    "@mdx-js/react": "^1.6.22",
    "@mdx-js/vue": "^2.0.0-next.8",
    "esbuild": "^0.8.31",
    "remark-frontmatter": "^2.0.0"
  },
  "devDependencies": {
    "@types/es-module-lexer": "^0.3.0",
    "@types/node": "^14.14.22",
    "typescript": "^4.1.3",
    "vite": "*"
  },
  "description": "Vite plugin for MDX",
  "license": "MIT",
  "repository": "https://github.com/brillout/vite-plugin-mdx",
  "keywords": [
    "vite",
    "mdx"
  ],
  "publishConfig": {
    "access": "public"
  }
}
