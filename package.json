{
  "workspaces": [
    "examples/react",
    "src/"
  ],
  "scripts": {
    "// User Scripts": "",
    "dev": "npm run dev:prepare && npm run dev:start",
    "dev:prepare": "npm run clean:plugin && npm install",
    "dev:start": "npm run tsc:watch",
    "build": "npm run build:prepare && npm run build:start",
    "build:prepare": "npm run clean:plugin && npm install",
    "build:start": "npm run tsc:once",
    "// TypeScript": "",
    "tsc:watch": "tsc --watch",
    "tsc:once": "tsc",
    "// Clean": "",
    "clean": "npm run clean:all",
    "clean:plugin": "git clean -Xdf --exclude examples/",
    "clean:all": "git clean -Xdf"
  },
  "devDependencies": {
    "@types/es-module-lexer": "^0.3.0",
    "@types/node": "^14.14.22",
    "typescript": "^4.1.3",
    "vite": "*"
  }
}
